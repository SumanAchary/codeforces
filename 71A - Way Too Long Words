#include <iostream>
using namespace std;
 
 
int main()
{
   
    int input = 0;
    cin >> input;
    string s;
    while(input--){
    cin >> s;
    
    int len = s.length();
    if(len > 10){
    cout << s[0] << s.length() - 2 <<s[s.length() - 1]<<endl;
    }else{
    cout << s<<endl;
    }
    }  
    return 0;
}
